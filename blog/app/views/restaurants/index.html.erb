<h1> lunch Index </h1>
<ul>
  <li><%= link_to "restaurants" %></li>
</ul>

<table>
  <thead>
  <th>name</th>
  <th>location</th>
  <th>recommend_menu</th>
  <th>recommend_cnt</th>
  <th>genre</th>
  </thead>
  <tbody>

  <% @restaurant.each do |restaurant| %>
    <tr>
      <td><%= link_to restaurant.name, "/restaurants/#{restaurant.id}" %></td>
      <td><%= restaurant.location %></td>
      <td><%= restaurant.recommend_menu %></td>
      <td><%= restaurant.recommend_cnt %></td>
      <td><%= restaurant.genre %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= button_to "식당 추가", new_restaurant_path, :method => "get" %>

<%= form_with url: "/restaurants/Test" do |form| %>
  <div>
    <%= form.submit "Post /restaurants/Test" %>
  </div>
<% end %>

